doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title ResetPassword
    body 
        .container 
            .row 
                .col-sm-4.mx-auto
                    .card.mt-3
                        h4.text-center.mt-3 Enter Password  and Confirm Password
                        .card-body 
                            form(action="", method="post") 
                                .mb-3 
                                    //- input(type="hidden" name="_csrf" value= csrfToken)
                                    label(for="") New Password 
                                    input(type="password", name="password",placeholder="Enter Your password").form-control 
                                .mb-3 
                                    label(for="") Confirm New Password 
                                    input(type="password", name="confirm_password",placeholder="Enter Your confirm password").form-control 
                                .mb-3 
                                    input(type="submit", value="confirm").btn.btn-primary.w-100 