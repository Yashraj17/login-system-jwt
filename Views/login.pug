doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Login
    body 
        .container 
            .row 
                .col-sm-4.mx-auto
                    .card.mt-3.shadow
                        h4.text-center.mt-3 Login 
                        if (messages.danger)
                            .alert.alert-danger.text-center
                                span= messages.danger
                        if (messages.success)
                            .alert.success-danger.text-center
                                span= messages.success
                        .card-body 
                            form(action="", method="post") 
                                .mb-3 
                                    input(type="hidden" name="_csrf" value= csrfToken)
                                    label(for="") Email 
                                    input(type="email", name="email",placeholder="Enter Your Email").form-control 
                                .mb-3 
                                    label(for="") Password 
                                    input(type="password", name="password",placeholder="Enter Your password").form-control 
                                .mb-3 
                                    input(type="submit", value="Login").btn.btn-primary.w-100 
                                .mb-3 
                                    .row 
                                        a(href="/forgetpassword").text-center.text-decoration-none Forget Password
                                        br
                                        a(href="/signup").text-center.text-decoration-none Don't Have Account? Signup