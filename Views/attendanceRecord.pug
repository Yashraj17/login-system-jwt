doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Home 
    body 
         nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:var(--bs-orange)") 
            .container 
                a.navbar-brand(href="") JWT AUTH

                ul.navbar-nav 
                    li.nav-item 
                        a.navbar-link(href="/home").btn.btn-waring.me-2= name.username 
                    li.nav-item 
                        a.navbar-link(href="/changePassword").btn.btn-waring.me-2 Change Password 
                    li.nav-item 
                        a.navbar-link(href="/logout").btn.btn-waring.me-2 Logout  
    .container 
        .row 
            h3.text-center Attendance Management System
            if message 
                 h4.text-center.mt-5= message
            else
                each val in result
                    .col-sm-12.col-lg-9.mx-auto 
                        .card.mt-4 
                            h4.mt-4.text-center Mark Attendance #{val.date}
                            .card-body 
                                table.table.table-striped.table-hover
                                    tr 
                                        th S.No
                                        th Name
                                        th Course
                                        th Semester
                                        th Branch
                                        th Attendance
                                        -var count =0
                                    each value in val.attendance
                                        -count++
                                        tr 
                                            td= count
                                            td= value.student_id.studentName
                                            td= value.student_id.course
                                            td= value.student_id.semester
                                            td= value.student_id.branch
                                            td= value.status